<!-- Modal -->
<div class="modal fade" id="upload-csv-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_tag upload_from_csv_shortened_urls_path, method: :post, multipart: true do %>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Create from CSV</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= file_field_tag 'Upload a csv', required: true, class: 'form-control', name: 'csv' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= button_tag 'Submit', class: 'btn btn-primary', type: 'submit' %>
        </div>
      <% end %>
    </div>
  </div>
</div>